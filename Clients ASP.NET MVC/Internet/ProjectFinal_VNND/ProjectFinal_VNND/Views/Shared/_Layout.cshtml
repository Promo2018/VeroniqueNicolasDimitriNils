@using ProjectFinal_VNND.Models
<!DOCTYPE html>



<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="@Url.Content("~/Content/Styleinternet.css")" type="text/css" />
</head>
<body>
    <header>
        <div class="row">
            <div class="column">
                <div class="container-fluid">
                    <div id="myCarousel" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#myCarousel" data-slide-to="1"></li>
                            <li data-target="#myCarousel" data-slide-to="2"></li>
                            <li data-target="#myCarousel" data-slide-to="3"></li>
                        </ol>

                        <div class="carousel-inner">
                            <div class="item active">
                                <img src="~/Content/photo1.jpg" alt="lac" style="width:100%">
                            </div>

                            <div class="item">
                                <img src="~/Content/photo2.jpg" alt="sable" style="width:100%">
                            </div>

                            <div class="item">
                                <img src="~/Content/photo3.jpg" alt="montagne" style="width:100%">
                            </div>

                            <div class="item">
                                <img src="~/Content/photo4.jpg" alt="aurore" style="width:100%">
                            </div>
                        </div>

                        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>                    <div class="middle">
                        <div class="text"> <a href="../../Voyages/Index">BoVoyage</a> </div>
                    </div>
                </div>
            </div>
        </div>

        <nav>

            <p id="p1">
                @if (Session["client"] != null)
                {<span>Compte : @Session["login"] | Bonjour @Html.Raw((Session["client"] as Personnes).Civilites.civilite) @Html.Raw((Session["client"] as Personnes).prenom)  @Html.Raw((Session["client"] as Personnes).NOMCAP) ! </span>}
                @if (Session["login"] != null)
                {<button class="btn btn-default" type="button" onclick="location.href='@Url.Action("LogOff", "Authentifications")'">D&eacute;connexion</button>}
            </p>

            <ul>
                <li class="menu">
                    <a href="../../Voyages/Index">Voyages</a>
                    @if (Session["client"] != null)
                    {
                        <ul class="submenu">
                            <li class="menu">
                                <a href="../../Dossiers/Index"> Mes Reservations </a>
                            </li>
                        </ul>
                    }
                </li>
                @if (Session["client"] != null)
                {
                    <li class="menu">
                        <a href="../../Personnes/Index">Mon Profil</a>
                        <ul class="submenu">
                            <li class="menu"><a href="../../Authentifications/Index">Mon Compte</a></li>
                        </ul>
                    </li>
                }



                <li class="menu"><a href="../../Authentifications/Connexion">Connexion</a></li>
                @if (Session["client"] == null)
                {
                    <li class="menu"><a href="../../Authentifications/Create">Créer un Compte</a></li>
                }

                </ul>
        </nav>

    </header>
    <div id="main">
        <center> @RenderBody()</center>
    </div>
</body>
<foot >
    <p> BoVoyages @DateTime.Now.Year </p>
</foot>
</html>
