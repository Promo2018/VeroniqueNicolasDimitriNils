@using ProjectFinal_VNND.Models
<!DOCTYPE html>



<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="@Url.Content("~/Content/style.css")" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    <header>

        <div class="row">
            <div class="column">
                <div class="container">
                    <img src="~/Content/entete.jpg" alt="Voyage" class="image" style="width:100%">
                    <div class="middle">
                        <div class="text"> <a href="../../Voyages/Index">BoVoyage</a> </div>
                    </div>
                </div>
            </div>
        </div>

        <nav>

            <p id="p1">
                @if (Session["client"] != null)
                {<span>Compte : @Session["login"] | Bonjour @Html.Raw((Session["client"] as Personnes).Civilites.civilite) @Html.Raw((Session["client"] as Personnes).prenom)  @Html.Raw((Session["client"] as Personnes).NOMCAP) ! </span>}
                @if (Session["login"] != null)
                {<button class="button" type="button" onclick="location.href='@Url.Action("LogOff", "Authentifications")'">D&eacute;connexion</button>}
            </p>

            <ul>
                <li class="menu">
                    <a href="../../Voyages/Index">Voyages</a>
                    @if (Session["client"] != null)
                    {
                        <ul class="submenu">
                            <li class="menu">
                                <a href="../../Dossiers/Index"> Mes Reservations </a>
                            </li>
                        </ul>
                    }
                    </li>
                @if (Session["client"] != null)
                {
                    <li class="menu">
                        <a href="../../Personnes/Index">Mon Profil</a>
                        <ul class="submenu">
                            <li class="menu"><a href="../../Authentifications/Index">Mon Compte</a></li>
                        </ul>
                    </li>
                }



                <li class="menu"><a href="../../Authentifications/Connexion">Connexion</a></li>
                <li class="menu"><a href="../../Authentifications/Create">Créer un Compte</a></li>

            </ul>
        </nav>

    </header>
    <div id="main">
        <center> @RenderBody()</center>
    </div>
    <footer>
        <p> BoVoyages @DateTime.Now.Year </p>

    </footer>
</body>
</html>
