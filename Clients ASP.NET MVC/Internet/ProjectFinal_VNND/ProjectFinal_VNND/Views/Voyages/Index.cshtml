@model IEnumerable<ProjectFinal_VNND.Models.Voyages>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Liste des Voyages</title>
</head>
<body>
    <br />

    <p> Liste des voyages disponibles</p>

    @using (Html.BeginForm(new { @class = "example" }))
    {
        <p style=" font-size:large ; color :black ">

            @Html.TextBox("searchPattern", "", new { placeholder = "Continent, Pays, Région, ..." })
            Date aller : @Html.TextBox("aller", "", new { type = "date", placeholder = "Date aller ..." })
            Date retour : @Html.TextBox("retour", "", new { type = "date", placeholder = "Date retour ..." })
            @Html.TextBox("prixMin", "", new { placeholder = "Prix minimum ..." })
            @Html.TextBox("prixMax", "", new { placeholder = "Prix maximum ..." })
            @Html.TextBox("place", "", new { placeholder = "Nombre de place 1 à 9 ..." })


            <button type="submit"><i class="fa fa-search"></i></button>
        </p>
    }
        <div class="bordure">
            <table class="table voyage">
                <tr>
                    <th>
                        Date aller
                    </th>
                    <th>
                        Date retour
                    </th>
                    <th>
                        Places disponibles
                    </th>
                    <th>
                        Tarif par personne <a href="#*"> * </a>
                    </th>
                    <th>
                        Destination
                    </th>

                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.date_aller)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.date_retour)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.places_disponibles)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tarif_tout_compris) &euro;
                        </td>
                        <td>
                            <ul class="dest">
                                <li>
                                    Pays : @Html.DisplayFor(modelItem => item.Destinations.pays)
                                </li>
                                <li>
                                    R&eacutegion : @Html.DisplayFor(modelItem => item.Destinations.region)
                                </li>
                            </ul>
                        </td>
                        <td>
                            @Html.ActionLink("Informations", "Details", new { id = item.id_voyage }) |
                            @Html.ActionLink("Reserver", "Reserver", new { id = item.id_voyage })
                        </td>
                    </tr>
                }

            </table>
        </div>
</body>
<foot>
    <div id="*" style=" font-size: large ; color:black ; text-align:right "> (*tout compris) </div>
</foot>
</html>
