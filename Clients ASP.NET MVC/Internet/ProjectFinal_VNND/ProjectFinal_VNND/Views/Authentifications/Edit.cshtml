@model ProjectFinal_VNND.Models.Authentifications


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Modifier</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Authentifications</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id_auth)

            <div class="form-group">
                Nouveau Mot de Passe :
                <div >
                    @Html.PasswordFor(model => model.mot_de_passe, new { htmlAttributes = new { @class = "form-middle" } })
                    @Html.ValidationMessageFor(model => model.mot_de_passe, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div >
                    <input type="submit" value="Enregistrer" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Retour à Mon Compte", "Index")
    </div>
</body>
</html>
