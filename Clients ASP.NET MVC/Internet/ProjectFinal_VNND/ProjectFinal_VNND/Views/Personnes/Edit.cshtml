@model ProjectFinal_VNND.Models.Personnes

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Modifier</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
    <div class="form-horizontal">
        <h4>Personnes</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_personne)

        <div class="form-group">
            @Html.LabelFor(model => model.civilite, "Civilité")
            <div >
                @Html.DropDownList("civilite", null, htmlAttributes: new { @class = "form-middle" })
                @Html.ValidationMessageFor(model => model.civilite, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.prenom, "Prénom")
            <div>
                @Html.EditorFor(model => model.prenom, new { htmlAttributes = new { @class = "form-middle" } })
                @Html.ValidationMessageFor(model => model.prenom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nom, "Nom")
            <div >
                @Html.EditorFor(model => model.nom, new { htmlAttributes = new { @class = "form-middle" } })
                @Html.ValidationMessageFor(model => model.nom, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.date_naissance, "Date de Naissance", htmlAttributes: new {type = "date" })
            <div>
                @Html.EditorFor(model => model.date_naissance, new { htmlAttributes = new { @class = "form-middle"} })
                @Html.ValidationMessageFor(model => model.date_naissance, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.adresse, "Adresse")
            <div>
                @Html.TextAreaFor(model => model.adresse, new { htmlAttributes = new { @class = "form-middle" } })
                @Html.ValidationMessageFor(model => model.adresse, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.telephone, "Numéro de Téléphone")
            <div>
                @Html.EditorFor(model => model.telephone, new { htmlAttributes = new { @class = "form-middle" } })
                @Html.ValidationMessageFor(model => model.telephone, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group">
            @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.email, "E-mail", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="form-group">
            <div>
                <input type="submit" value="Enregistrer" class="btn btn-default" />
            </div>
        </div>
    </div>
    }
    
    <div>
        @Html.ActionLink("Retour à la liste des Voyageurs", "Index")
    </div>
</body>
</html>
