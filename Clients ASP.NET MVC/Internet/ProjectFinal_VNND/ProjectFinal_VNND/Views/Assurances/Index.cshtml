@model IEnumerable<ProjectFinal_VNND.Models.Assurances>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Liste des Assurances</title>
</head>
<body>

    @*@using (Html.BeginForm())
    {
        <p>
            Rechercher: @Html.TextBox("type", "", new { placeholder = "Type de l'assurance ..." })
            <button type="submit"><i class="fa fa-search"></i></button>
