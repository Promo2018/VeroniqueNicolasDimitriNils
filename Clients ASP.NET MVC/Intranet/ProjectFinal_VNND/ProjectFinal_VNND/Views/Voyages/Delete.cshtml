@model ProjectFinal_VNND.Models.Voyages



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Supprimer</title>
</head>
<body>
    <h3>Etes-vous sure de vouloir supprimer ce Voyage ?</h3>
    <div>
        <h4>Voyages</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                ID Destination
            </dt>
            <dt>
                @Model.id_voyage
            </dt>
            <dt>
                Date aller
            </dt>

            <dd>
                @Html.DisplayFor(model => model.date_aller)
            </dd>

            <dt>
                Date retour
            </dt>

            <dd>
                @Html.DisplayFor(model => model.date_retour)
            </dd>

            <dt>
                Nombre de places encore disponibles
            </dt>

            <dd>
                @Html.DisplayFor(model => model.places_disponibles)
            </dd>

            <dt>
                Tarif Tout Compris
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tarif_tout_compris) &euro;
            </dd>

            <dt>
                Agence de Voyage
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Agences.agence)
            </dd>

            <dt>
                Destination
            </dt>
            <dd>
                <ul>
                    <li>
                        ID Destination : @Model.Destinations.id_destination
                    </li>
                    <li>
                        Pays : @Html.DisplayNameFor(model => model.Destinations.pays)
                    </li>
                    <li>
                        R&eacutegion : @Html.DisplayFor(model => model.Destinations.region)
                    </li>
                    <li>
                        Description du Voyage
                    </li>
                    @Html.DisplayFor(model => model.Destinations.descriptif)
                </ul>
            </dd>

        </dl>
    
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
    
            <div class="form-actions no-color">
                <input type="submit" value="Supprimer" class="btn btn-default" /> |
                @Html.ActionLink("Retour à la liste des Voyages", "Index")
            </div>
        }
    </div>
</body>
</html>
