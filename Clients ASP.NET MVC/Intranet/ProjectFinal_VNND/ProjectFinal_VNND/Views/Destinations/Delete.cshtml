@model ProjectFinal_VNND.Models.Destinations


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Supprimer</title>
</head>
<body>
    <h3>Etes-vous sure de vouloir supprimer cette Destination ?</h3>
    <div>
        <h4>Destinations</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                ID Destination
            </dt>

            <dd>
                @Model.id_destination
            </dd>
            <dt>
                Continent
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Continents.continent)
            </dd>

            <dt>
                Pays
            </dt>

            <dd>
                @Html.DisplayFor(model => model.pays)
            </dd>

            <dt>
                R&eacutegion
            </dt>

            <dd>
                @Html.DisplayFor(model => model.region)
            </dd>

            <dt>
                Description du Voyage
            </dt>

            <dd>
                @Html.DisplayFor(model => model.descriptif)
            </dd>


        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Supprimer" class="btn btn-default" /> |
                @Html.ActionLink("Retour au Menu Destination", "Index")
            </div>
        }
    </div>
</body>
</html>