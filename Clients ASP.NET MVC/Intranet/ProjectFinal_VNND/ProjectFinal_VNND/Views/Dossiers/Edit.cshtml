@model ProjectFinal_VNND.Models.Dossiers

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Modifier</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>Dossiers</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id_dossier)
    
            <div class="form-group control-label col-md-2">
                Numero de Carte Bancaire
                <div class="col-md-10">
                    @Html.EditorFor(model => model.numero_carte_bancaire, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.numero_carte_bancaire, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group control-label col-md-2">
                Voyage
                <div class="col-md-10">
                    @Html.DropDownList("voyage", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.voyage, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group control-label col-md-2">
                Client
                <div class="col-md-10">
                    @Html.DropDownList("client", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.client, "", new { @class = "text-danger" })
                </div>
            </div>    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Enregistrer" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Retour à la liste des Dossiers", "Index")
    </div>
</body>
</html>
