@model IEnumerable<ProjectFinal_VNND.Models.Dossiers>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Liste des Dossiers</title>
</head>
<body>
    <p>
        @Html.ActionLink("Ajouter", "Create")
    </p>

    @using (Html.BeginForm(new { @class = "example" }))
    {
        <p>
            Rechercher  @Html.TextBox("nom", "", new { placeholder = "Nom ..." })
            @Html.TextBox("prenom", "", new { placeholder = "Prénom ..." })
            @Html.TextBox("continent", "", new { placeholder = "Continent ..." })
            <button type="submit"><i class="fa fa-search"></i></button>
        </p>
    }

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id_dossier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personnes.civilite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personnes.nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personnes.prenom)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.dernier_suivi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Raisons_Annulations.annulation_raison)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Etats_Dossiers.etat)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_dossier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Personnes.civilite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Personnes.nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Personnes.prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dernier_suivi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Raisons_Annulations.annulation_raison)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Etats_Dossiers.etat)
            </td>

            <td>
                @Html.ActionLink("Modifier", "Edit", new { id = item.id_dossier }) |
                @Html.ActionLink("Informations", "Details", new { id = item.id_dossier }) |
                @Html.ActionLink("Supprimer", "Delete", new { id = item.id_dossier })
            </td>
        </tr>
        }

    </table>
</body>
</html>
