@model IEnumerable<ProjectFinal_VNND.Models.Personnes>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Ajouter un Voyageur", "Sauvegarder")
    </p>

    @using (Html.BeginForm(new { @class = "example" }))
    {
    <p>
        @Html.TextBox("prenom", "", new { placeholder = "Prénom ..." })
        @Html.TextBox("nom", "", new { placeholder = "Nom ..." })
        <button type="submit"><i class="fa fa-search"></i></button>
    </p>
    }

    <table class="table">
        <tr>
            <th>
                Civilit&eacute
            </th>
            <th>
                Pr&eacutenom
            </th>
            <th>
                Nom
            </th>

            <th>
                E-Mail
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Civilites.civilite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nom)
            </td>           
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.ActionLink("Modifier", "Modifier", new { id = item.id_personne }) |
                @Html.ActionLink("Informations", "Informations", new { id = item.id_personne }) |
                @Html.ActionLink("Supprimer", "Supprimer", new { id = item.id_personne })
            </td>
        </tr>
        }

    </table>
</body>
</html>
